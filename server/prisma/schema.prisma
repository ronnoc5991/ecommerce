generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum Audience {
  MEN
  WOMEN
  UNISEX
}

model Product {
  id               Int              @id @default(autoincrement())
  // Should this be a slug? if we i18n
  name             String
  audience         Audience
  // How does this play with i18n? it would have to live separately
  description      String           @default("")
  defaultVariantId Int?
  defaultVariant   ProductVariant?  @relation("DefaultVariant", fields: [defaultVariantId], references: [id])
  variants         ProductVariant[] @relation("ProductVariants")
  categories       Category[]
}

model ProductVariant {
  id         Int            @id @default(autoincrement())
  sku        String         @unique
  priceCents      Int
  stock      Int
  // NORMALIZING SIZE:
  // could create size systems, sizes belong to systems, each size has a displayOrder attribute for sorting
  size       String
  colorId    Int
  color      Color          @relation(fields: [colorId], references: [id])
  images     VariantImage[]
  productId  Int
  product    Product        @relation("ProductVariants", fields: [productId], references: [id], onDelete: Cascade)
  defaultFor Product[]      @relation("DefaultVariant")

  @@unique([productId, size, colorId])
}

model Category {
  id       Int       @id @default(autoincrement())
  // should this be a slug already? we want to avoid casing conflicts... 'Shirt' vs 'shirt'
  name     String    @unique
  products Product[]
}

model VariantImage {
  id        Int            @id @default(autoincrement())
  url       String
  variantId Int
  variant   ProductVariant @relation(fields: [variantId], references: [id])
}

// Could create 'ColorFamily' later (ie: 'Red', 'Blue', etc)
// and have each color be a variant (ie: 'Crimson Red', 'Aqua Blue', etc)
// this would allow filtering by ColorFamily
model Color {
  id              Int              @id @default(autoincrement())
  name            String
  slug            String           @unique
  hex             String           @db.Char(7)
  productVariants ProductVariant[]
}
